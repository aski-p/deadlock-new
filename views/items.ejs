const items = <%- JSON.stringify(items) %>;

// ì¹´í…Œê³ ë¦¬ë³„ ì•„ì´ì½˜ ë§µí•‘
function getCategoryIcon(category) {
    const icons = {
        weapon: 'âš”ï¸',
        vitality: 'ğŸ’š', 
        spirit: 'ğŸ”®'
    };
    return icons[category] || 'ğŸ”¸';
}

// ì•„ì´í…œ ì²« ê¸€ì ì¶”ì¶œ
function getItemInitial(itemName) {
    return itemName.charAt(0);
}

// ì•„ì´í…œ ì¹´ë“œ ìƒì„± í•¨ìˆ˜
function createItemCard(item, category) {
    const card = document.createElement('div');
    card.className = `item-card tier-${item.tier ? item.tier.toLowerCase() : 'i'}`;
    
    const categoryIcon = getCategoryIcon(category);
    const itemInitial = getItemInitial(item.name);
    
    card.innerHTML = `
        <div class="tier-indicator">${item.tier || 'I'}</div>
        <div class="item-icon">
            <div class="category-icon-small">${categoryIcon}</div>
            <div class="item-initial">${itemInitial}</div>
        </div>
        <div class="item-name">${item.name}</div>
        <div class="tooltip">
            <div class="tooltip-header">
                <div class="tooltip-title">${item.name}</div>
                <div class="tooltip-price">${item.price}</div>
            </div>
            <div class="tooltip-stats">
                ${item.stats.map(stat => `
                    <div class="tooltip-stat">
                        <div class="stat-icon"></div>
                        <span>${stat}</span>
                    </div>
                `).join('')}
            </div>
            <div class="tooltip-description">${item.description}</div>
        </div>
    `;
    
    return card;
}

// ì•„ì´í…œ ë Œë”ë§
function renderItems() {
    // ë¬´ê¸° ì•„ì´í…œ
    const weaponGrid = document.getElementById('weapon-grid');
    if (weaponGrid) {
        items.weapon.forEach(item => {
            weaponGrid.appendChild(createItemCard(item, 'weapon'));
        });
    }

    // ìƒëª… ì•„ì´í…œ
    const vitalityGrid = document.getElementById('vitality-grid');
    if (vitalityGrid) {
        items.vitality.forEach(item => {
            vitalityGrid.appendChild(createItemCard(item, 'vitality'));
        });
    }

    // ë§ˆë²• ì•„ì´í…œ
    const spiritGrid = document.getElementById('spirit-grid');
    if (spiritGrid) {
        items.spirit.forEach(item => {
            spiritGrid.appendChild(createItemCard(item, 'spirit'));
        });
    }
}

// ê²€ìƒ‰ ê¸°ëŠ¥
function initializeSearch() {
    const searchInput = document.getElementById('item-search');
    if (searchInput) {
        searchInput.addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const allCards = document.querySelectorAll('.item-card');
            
            allCards.forEach(card => {
                const itemName = card.querySelector('.item-name').textContent.toLowerCase();
                if (itemName.includes(searchTerm)) {
                    card.style.display = 'flex';
                } else {
                    card.style.display = 'none';
                }
            });
        });
    }
}

// í˜ì´ì§€ ë¡œë“œ ì‹œ ì´ˆê¸°í™”
document.addEventListener('DOMContentLoaded', function() {
    renderItems();
    initializeSearch();
});


<script>
// Get server data from EJS
const serverItems = <%-JSON.stringify(items)%>;

// Function to display items by category and tier
function displayItems() {
    ['weapon', 'vitality', 'spirit'].forEach(category => {
        [800, 1600, 3200, 6400].forEach(tier => {
            const container = document.getElementById(`${category}-${tier}`);
            if (container) {
                // Filter items by category and tier
                const categoryItems = serverItems[category] || [];
                const tierItems = categoryItems.filter(item => item.price === tier);
                
                const itemsHTML = tierItems.map(item => `
                    <div class="item-card" data-item-name="${item.name}">
                        <div class="item-image">
                            <img src="https://via.placeholder.com/48x48/333333/ffffff?text=${encodeURIComponent(item.name.substring(0, 2))}" 
                                 alt="${item.name}" 
                                 onerror="this.src='https://via.placeholder.com/48x48/333333/ffffff?text=No+Image'">
                        </div>
                        <div class="item-name">${item.name}</div>
                        <div class="item-description" style="display: none;">${item.description || ''}</div>
                        
                        <!-- Hover Tooltip -->
                        <div class="item-tooltip">
                            <div class="tooltip-header">
                                <h3 class="tooltip-title">${item.name}</h3>
                                <span class="tooltip-price">${item.price}</span>
                            </div>
                            <div class="tooltip-stats">
                                ${item.stats ? item.stats.map(stat => `
                                    <div class="tooltip-stat">${stat}</div>
                                `).join('') : ''}
                            </div>
                            <div class="tooltip-description">
                                ${item.description || ''}
                            </div>
                        </div>
                    </div>
                `).join('');
                container.innerHTML = itemsHTML;
            }
        });
    });
}

// Search functionality
function setupSearch() {
    const searchInput = document.getElementById('item-search');
    if (searchInput) {
        searchInput.addEventListener('input', (e) => {
            const searchTerm = e.target.value.toLowerCase();
            const itemCards = document.querySelectorAll('.item-card');
            
            itemCards.forEach(card => {
                const itemName = card.querySelector('.item-name').textContent.toLowerCase();
                if (itemName.includes(searchTerm)) {
                    card.style.display = 'flex';
                } else {
                    card.style.display = 'none';
                }
            });
        });
    }
}

// Initialize when DOM loads
document.addEventListener('DOMContentLoaded', () => {
    displayItems();
    setupSearch();
});
</script>
// 아이템 카드 생성 함수
function createItemCard(item, category) {
    const card = document.createElement('div');
    card.className = `item-card tier-${item.tier ? item.tier.toLowerCase() : 'i'}`;
    
    card.innerHTML = `
        <div class="tier-indicator">${item.tier || 'I'}</div>
        <div class="item-icon" style="background-color: #666;"></div>
        <div class="item-name">${item.name}</div>
        <div class="tooltip">
            <div class="tooltip-header">
                <div class="tooltip-title">${item.name}</div>
                <div class="tooltip-price">${item.price}</div>
            </div>
            <div class="tooltip-stats">
                ${item.stats.map(stat => `
                    <div class="tooltip-stat">
                        <div class="stat-icon"></div>
                        <span>${stat}</span>
                    </div>
                `).join('')}
            </div>
            <div class="tooltip-description">${item.description}</div>
        </div>
    `;
    
    return card;
}

